<?xml version="1.0" encoding="utf-8"?>
<!-- Danger button (red) with state-based styling -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorErrorLight">
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    
    <item>
        <selector>
            <!-- Disabled state -->
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/progressBarBackground"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorErrorContainer"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
            <!-- Default state -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorError"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </selector>
    </item>
    
</ripple>
