<?xml version="1.0" encoding="utf-8"?>
<!-- Success button (green) with state-based styling -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorSuccessLight">
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>
    
    <item>
        <selector>
            <!-- Disabled state -->
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/progressBarBackground"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gradientSuccessEnd"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
            <!-- Default state with gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/colorSuccess"
                        android:endColor="@color/gradientSuccessEnd"
                        android:angle="135"
                        android:type="linear"/>
                    <corners android:radius="14dp"/>
                </shape>
            </item>
        </selector>
    </item>
    
</ripple>
