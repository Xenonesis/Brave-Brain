<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Main Content Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Icon Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="âš™ï¸"
                    android:textSize="40sp"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_limit_access_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:contentDescription="@string/time_limit_access_title"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_limit_access_subtitle"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif"/>

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/colorAccentLight"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/questionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/time_limit_access_question"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccentDark"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="4dp"/>

                    <!-- Progress Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ProgressBar
                            android:id="@+id/countdownProgress"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:indeterminateTint="@color/colorPrimary"
                            style="?android:attr/progressBarStyleSmall"/>

                        <TextView
                            android:id="@+id/countdownText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Redirecting in 4 seconds..."
                            android:textSize="14sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                    <!-- Countdown Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="8"
                        android:progress="4"
                        android:progressTint="@color/colorPrimary"
                        android:progressBackgroundTint="@color/colorDivider"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Continue Button (Primary Action) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:text="âœ“ Continue to Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="16dp"
                    app:elevation="6dp"
                    android:contentDescription="Continue to access time limit settings"/>

                <!-- Cancel Button (Secondary Action) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="â† Return to Home"
                    android:textSize="16sp"
                    android:textColor="@color/textSecondary"
                    app:strokeColor="@color/textSecondary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    android:contentDescription="Cancel and return to home screen"/>

            </LinearLayout>

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/modern_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â„¹ï¸"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="What happens next?"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This will allow you to modify time limits for your selected apps. You'll need to complete a quick verification challenge for security."
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Security Badge -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/badge_background"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’"
            android:textSize="14sp"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure Access Control"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSecondary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
