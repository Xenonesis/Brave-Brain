<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_gradient_background"
    android:fitsSystemWindows="true">

    <!-- App Logo/Brand Section -->
    <LinearLayout
        android:id="@+id/brandSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/brandLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/logo_no_bg"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/brandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnPrimary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:id="@+id/progressSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintTop_toBottomOf="@id/brandSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Page Counter -->
        <TextView
            android:id="@+id/pageCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 of 5"
            android:textSize="13sp"
            android:textColor="@color/colorOnPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp" />

        <!-- Custom Progress Bar with proper styling -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/onboarding_progress_bar" />

    </LinearLayout>

    <!-- Main Content Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressSection"
        app:layout_constraintBottom_toTopOf="@id/navigationSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ViewPager for onboarding pages -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Navigation Section -->
    <LinearLayout
        android:id="@+id/navigationSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tab indicators with improved styling -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            app:tabBackground="@drawable/tab_selector_improved"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMinWidth="16dp"
            app:tabMaxWidth="16dp"
            app:tabPaddingStart="6dp"
            app:tabPaddingEnd="6dp" />

        <!-- Button container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Skip Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/skipButton"
                style="@style/Widget.App.Button.Ghost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/skip_button"
                android:textColor="@color/colorOnPrimary"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:strokeColor="@color/colorOnPrimary"
                app:strokeWidth="1.5dp"
                app:rippleColor="#40FFFFFF" />

            <!-- Continue/Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButton"
                style="@style/Widget.App.Button.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/continue_button"
                android:layout_marginStart="10dp"
                app:backgroundTint="@color/colorOnPrimary"
                android:textColor="@color/colorPrimary"
                android:visibility="visible"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:iconTint="@color/colorPrimary"
                app:iconPadding="10dp"
                app:rippleColor="@color/colorPrimary" />

            <!-- Get Started Button (shown only on last page) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/getStartedButton"
                style="@style/Widget.App.Button.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_started_button"
                android:visibility="gone"
                app:backgroundTint="@color/colorOnPrimary"
                android:textColor="@color/colorPrimary"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="end"
                app:iconTint="@color/colorPrimary"
                app:iconPadding="10dp"
                app:rippleColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 