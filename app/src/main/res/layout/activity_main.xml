<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Welcome Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Today's Overview"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>



        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱 Screen Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="20dp" />

                <!-- Total Device Screen Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:padding="20dp"
                    android:background="@drawable/screen_time_background">

                    <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Screen Time Today"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="8dp" /> -->

                    <TextView
                        android:id="@+id/totalScreenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h 0m"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <!-- Usage Graph -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 App Usage Breakdown"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/usageGraphContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- Selected Apps Usage -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯 Your Focus Apps"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/selectedAppsUsageList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/actionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/statsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Quick Actions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accessButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🔐 Grant Usage Access"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorOnPrimary"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectAppsButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="📱 Select Apps to Block"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_manage"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setTimeLimitsButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="⏰ Set Time Limits"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="16dp"
                    app:backgroundTint="@color/colorPrimaryVariant"
                    android:textColor="@color/colorOnPrimary"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp" />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout> 