<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Enhanced Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, December 25"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:fontFamily="sans-serif" />

        </LinearLayout>



        <!-- Enhanced Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen Time"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="24dp" />

                <!-- Enhanced Screen Time Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:padding="28dp"
                    android:background="@drawable/screen_time_background">

                    <TextView
                        android:id="@+id/totalScreenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h 52m"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/textOnGradient"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total screen time today"
                        android:textSize="14sp"
                        android:textColor="@color/textOnGradient"
                        android:alpha="0.9" />

                </LinearLayout>

                <!-- Stats Overview Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stats_card_background"
                        android:padding="20dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/averageSessionTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26m"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/textHighlight"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg session"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/stats_card_background"
                        android:padding="20dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/appsUsedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorSecondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apps used"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Usage Breakdown -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage Breakdown"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/usageGraphContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp" />

                <!-- Focus Apps Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Apps"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/selectedAppsUsageList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Enhanced Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/actionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/statsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectAppsButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="SELECT APPS TO BLOCK"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorOnPrimary"
                    android:layout_marginBottom="12dp"
                    android:elevation="0dp"
                    app:rippleColor="@color/colorRipple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setTimeLimitsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="UPDATE TIME LIMITS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/colorSecondary"
                    app:strokeWidth="1dp"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginBottom="12dp"
                    app:rippleColor="@color/colorHover" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accessButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Grant Usage Access"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    android:textColor="@color/colorTertiary"
                    app:rippleColor="@color/colorHover" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Gamification Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gamificationCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/actionsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Progress"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/textSecondary"
                    android:fontFamily="sans-serif"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewGamificationButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ† VIEW ACHIEVEMENTS &amp; STREAKS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorOnPrimary"
                    android:elevation="0dp"
                    app:rippleColor="@color/colorRipple" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout> 