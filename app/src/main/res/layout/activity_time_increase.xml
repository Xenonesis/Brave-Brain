<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Main Content Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/icon_circle_background">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/colorPrimary" />

            </FrameLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Limit Reached"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Question -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want to increase the time limit for this app?"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Countdown Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/warning_amber_light"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <ProgressBar
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="12dp"
                        android:indeterminateTint="@color/warning_amber"
                        style="?android:attr/progressBarStyleSmall"/>

                    <TextView
                        android:id="@+id/countdownText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redirecting in 5 seconds..."
                        android:textSize="14sp"
                        android:textColor="@color/warning_amber_dark"
                        android:gravity="center"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- No Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/noButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="No Thanks"
                    android:textSize="15sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginEnd="8dp"
                    app:strokeColor="@color/divider"
                    app:cornerRadius="14dp"/>

                <!-- Yes Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/yesButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Yes, Extend"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="14dp"/>

            </LinearLayout>

            <!-- Info Text -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/primaryLight"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choosing 'Yes' requires solving math problems to increase your time limit."
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:lineSpacingExtra="2dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout> 