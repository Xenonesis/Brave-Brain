<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â° Time Limit Reached"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorOnPrimary"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Question -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to increase the time limit for this app?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorOnPrimary"
        android:gravity="center"
        android:layout_marginBottom="48dp"/>

    <!-- Countdown -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redirecting in 5 seconds..."
        android:textSize="16sp"
        android:textColor="@color/colorOnPrimary"
        android:gravity="center"
        android:layout_marginBottom="48dp"/>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- No Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/noButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="No"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/colorOnPrimary"
            app:strokeWidth="2dp"
            android:textColor="@color/colorOnPrimary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            android:gravity="center"/>

        <!-- Yes Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/yesButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Yes"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:backgroundTint="@color/colorOnPrimary"
            android:textColor="@color/colorPrimary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            android:gravity="center"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you choose 'Yes', you'll need to solve math problems to increase your time limit."
        android:textSize="14sp"
        android:textColor="@color/colorOnPrimary"
        android:gravity="center"
        android:alpha="0.8"/>

</LinearLayout> 