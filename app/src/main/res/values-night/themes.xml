<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Testing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        
        <!-- Status Bar - Dark theme with light icons -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        
        <!-- Window Styling -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- CardView styling -->
        <item name="cardCornerRadius">16dp</item>
        
        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- Ripple color -->
        <item name="colorControlHighlight">@color/colorRipple</item>
        
        <!-- Text Input styling -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        
        <!-- Error color -->
        <item name="colorError">@color/colorError</item>
    </style>
    
    <!-- Base Widget Style (required for implicit parent inheritance) -->
    <style name="Widget.App" parent="">
        <!-- Empty base style for Widget.App.* naming convention -->
    </style>
    
    <!-- Primary Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@color/textTertiary</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text Button Style -->
    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">44dp</item>
    </style>
    
    <!-- ======================= -->
    <!-- ENHANCED BUTTON VARIANTS -->
    <!-- ======================= -->
    
    <!-- Large Primary Button (56dp height) - For main CTAs -->
    <style name="Widget.App.Button.Large" parent="Widget.App.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="iconPadding">14dp</item>
    </style>
    
    <!-- Small Button (40dp height) - For compact spaces -->
    <style name="Widget.App.Button.Small" parent="Widget.App.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">8dp</item>
    </style>
    
    <!-- Extra Small Button (36dp height) - For inline actions -->
    <style name="Widget.App.Button.XSmall" parent="Widget.App.Button">
        <item name="android:minHeight">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="iconSize">16dp</item>
        <item name="iconPadding">6dp</item>
    </style>
    
    <!-- Success Button (Green) - For positive actions like "Complete", "Save" -->
    <style name="Widget.App.Button.Success" parent="Widget.App.Button">
        <item name="backgroundTint">@color/colorSuccess</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorSuccessLight</item>
    </style>
    
    <!-- Success Button Large -->
    <style name="Widget.App.Button.Success.Large" parent="Widget.App.Button.Large">
        <item name="backgroundTint">@color/colorSuccess</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorSuccessLight</item>
    </style>
    
    <!-- Danger/Destructive Button (Red) - For delete, cancel actions -->
    <style name="Widget.App.Button.Danger" parent="Widget.App.Button">
        <item name="backgroundTint">@color/colorError</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorErrorLight</item>
    </style>
    
    <!-- Danger Button Outlined -->
    <style name="Widget.App.Button.Danger.Outlined" parent="Widget.App.Button.Outlined">
        <item name="strokeColor">@color/colorError</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="iconTint">@color/colorError</item>
        <item name="rippleColor">@color/colorErrorLight</item>
    </style>
    
    <!-- Warning Button (Orange/Amber) -->
    <style name="Widget.App.Button.Warning" parent="Widget.App.Button">
        <item name="backgroundTint">@color/colorWarning</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorWarningLight</item>
    </style>
    
    <!-- Info Button (Blue) -->
    <style name="Widget.App.Button.Info" parent="Widget.App.Button">
        <item name="backgroundTint">@color/colorInfo</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorInfoLight</item>
    </style>
    
    <!-- Secondary Button (Uses secondary color) -->
    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="iconTint">@color/colorOnSecondary</item>
    </style>
    
    <!-- Tonal Button (Subtle background) -->
    <style name="Widget.App.Button.Tonal" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="backgroundTint">@color/colorAccentLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    
    <!-- Large Outlined Button -->
    <style name="Widget.App.Button.Outlined.Large" parent="Widget.App.Button.Outlined">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconPadding">14dp</item>
    </style>
    
    <!-- Small Outlined Button -->
    <style name="Widget.App.Button.Outlined.Small" parent="Widget.App.Button.Outlined">
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">8dp</item>
    </style>
    
    <!-- Icon Button (Square, typically 48dp) -->
    <style name="Widget.App.Button.Icon" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
    
    <!-- Icon Button Outlined -->
    <style name="Widget.App.Button.Icon.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
    
    <!-- Icon Button Tonal -->
    <style name="Widget.App.Button.Icon.Tonal" parent="Widget.App.Button.Icon">
        <item name="backgroundTint">@color/colorAccentLight</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>
    
    <!-- Floating Action Button Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
    
    <!-- Extended FAB Style -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="elevation">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Chip Button Style (for tags, filters) -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">@color/colorSurfaceVariant</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipStrokeColor">@color/cardBorder</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_check</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
    
    <!-- Toggle Button Group -->
    <style name="Widget.App.Button.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cardBorder</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    
    <!-- Pill Button (Fully rounded) -->
    <style name="Widget.App.Button.Pill" parent="Widget.App.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
    </style>
    
    <!-- Pill Button Outlined -->
    <style name="Widget.App.Button.Pill.Outlined" parent="Widget.App.Button.Outlined">
        <item name="cornerRadius">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
    </style>
    
    <!-- Ghost Button (Very subtle, for less important actions) -->
    <style name="Widget.App.Button.Ghost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="iconTint">@color/iconSecondary</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cardBorder</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>
    
    <!-- Section Header Text Style -->
    <style name="TextAppearance.App.SectionHeader">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Title Text Style -->
    <style name="TextAppearance.App.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <!-- Subtitle Text Style -->
    <style name="TextAppearance.App.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Body Text Style -->
    <style name="TextAppearance.App.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <!-- Large Number Display Style -->
    <style name="TextAppearance.App.LargeNumber">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <!-- Switch Style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/colorPrimary</item>
        <item name="trackTint">@color/progressBarBackground</item>
    </style>
    
    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.App.BottomNavigation.ActiveIndicator" parent="">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="android:color">@color/bottomNavActiveIndicator</item>
    </style>
    
    <!-- Pill Shape for Navigation Indicator -->
    <style name="ShapeAppearance.App.SmallComponent.Pill" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Bottom Nav Text Styles -->
    <style name="TextAppearance.App.BottomNav.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.BottomNav.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/iconSecondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Action Card Style (for Quick Actions) -->
    <style name="Widget.App.ActionCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cardBorder</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
    
    <!-- Primary Action Card (Colored background) -->
    <style name="Widget.App.ActionCard.Primary" parent="Widget.App.ActionCard">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Secondary Action Card -->
    <style name="Widget.App.ActionCard.Secondary" parent="Widget.App.ActionCard">
        <item name="cardBackgroundColor">@color/colorSecondary</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Stat Card Style (for Quick Stats) -->
    <style name="Widget.App.StatCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>
    
    <!-- Hero Card (Glass effect card) -->
    <style name="Widget.App.HeroCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/heroCardBackground</item>
    </style>
    
    <!-- Settings Item Style -->
    <style name="Widget.App.SettingsItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!-- Tab Text Appearance -->
    <style name="TextAppearance.App.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Insight Card Style -->
    <style name="Widget.App.InsightCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/insightCardBorder</item>
        <item name="cardBackgroundColor">@color/insightCardBackground</item>
    </style>
</resources>